<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout_item_exerciseList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/img_exerciseList_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_dumbell" />

    <TextView
        android:id="@+id/txt_exerciseList_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/img_exerciseList_icon"
        android:layout_toRightOf="@+id/img_exerciseList_icon"
        android:text="Exercise Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_exerciseList_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_exerciseList_name"
        android:layout_alignStart="@+id/txt_exerciseList_name"
        android:layout_below="@id/txt_exerciseList_name"
        android:layout_marginLeft="1dp"
        android:text="Exercise Target"
        android:textSize="12sp" />
</RelativeLayout>