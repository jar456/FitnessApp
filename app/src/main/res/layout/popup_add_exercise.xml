<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:padding="32dp">


    <TextView
        android:id="@+id/txt_enterExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:text="Exercise Name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_enterExerciseName"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txt_enterSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_exerciseName"
        android:layout_marginTop="16dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:text="Sets"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_enterReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_enterSets"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/editText_sets"
        android:layout_toRightOf="@id/editText_sets"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:text="Reps"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_sets"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_enterSets"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="1" />

    <EditText
        android:id="@+id/editText_reps"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_enterReps"
        android:layout_alignStart="@+id/txt_enterReps"
        android:layout_below="@+id/txt_enterSets"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="1" />

</RelativeLayout>