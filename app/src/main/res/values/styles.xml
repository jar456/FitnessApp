<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>  <!-- Used for default ActionBar NOT TOOLBAR!!-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--Used for status bar-->
        <item name="colorAccent">@color/colorAccent</item> <!-- Used for widgets-->
    </style>

    <style name="ButtonText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AddShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="ProgramDataHeaderText">
        <item name="android:text">100sp</item>

    </style>

</resources>
